# WireGuard Server Configuration
# Copy this file to .env and modify as needed

# Server Public IP (use 'auto' to auto-detect, or set manually)
SERVER_PUB_IP=auto

# Public network interface (usually eth0 in Docker)
SERVER_PUB_NIC=eth0

# WireGuard interface name
SERVER_WG_NIC=wg0

# Server WireGuard IPv4 address
SERVER_WG_IPV4=10.66.66.1

# Server WireGuard IPv6 address
SERVER_WG_IPV6=fd42:42:42::1

# WireGuard listening port (UDP)
SERVER_PORT=51820

# DNS servers for clients
CLIENT_DNS_1=1.1.1.1
CLIENT_DNS_2=1.0.0.1

# AllowedIPs - what traffic should go through VPN
# 0.0.0.0/0,::/0 routes all traffic through VPN
# For split tunnel, specify only certain networks
ALLOWED_IPS=0.0.0.0/0,::/0

# Initial client name (optional, will be created on first run)
CLIENT_NAME=client1
